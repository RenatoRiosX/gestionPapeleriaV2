@model ClientePapeleria.Models.AltaMovimientoStock

@{
    ViewData["Title"] = "Registro movimiento de stock";
}

<h1>Registrar movimiento de stock</h1>
<hr />
<div class="row">
    <partial name="_Mensajes" />
    <div class="col-md-4">
        <form asp-action="RegistrarMovimientoStock" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdArticulo" class="control-label">Articulo</label>
                <select asp-for="IdArticulo" class="form-control" required>
                    @if (Model.Articulos != null)
                    {
                        @foreach (var articulo in Model.Articulos)
                        {
                            <option value="@articulo.Id">@articulo.Nombre</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdArticulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdTipoMovimiento" class="control-label">Tipo de movimiento</label>
                <select asp-for="IdTipoMovimiento" class="form-control" required>
                    @if (Model.TiposDeMovimientos != null)
                    {
                        @foreach (var tipoMovimiento in Model.TiposDeMovimientos)
                        {
                            <option value="@tipoMovimiento.Id">@tipoMovimiento.Nombre</option>
                        }
                    }
                </select>
                <span asp-validation-for="IdTipoMovimiento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" required />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
