@model ClientePapeleria.Models.DatosLogin
<div class="row justify-content-center">
	<div class="col-md-6 mx-auto">
		<h1 class="mx-auto">Login</h1>
		<hr />
		<partial name="_Mensajes"/>
		<form method="post">
			<div class="form-group">
				<label class="control-label" asp-for="Email">Email</label>
				<input name="Email" asp-for="Email" class="form-control"/>

			</div>
			<div class="form-group">
				<label class="control-label" asp-for="Contrasenia">Contraseña</label>
				<input asp-for="Contrasenia" type="password" name="Contrasenia" class="form-control" />

			</div>

			<div class="form-group mt-2">
				<input type="submit" value="Ingresar" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>